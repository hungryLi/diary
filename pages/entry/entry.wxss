/* pages/mudol/mudol.wxss */
page{
    background-color:#EEE9E9;
}
.container1{
    height: 400rpx;
}
.toolbar{
    height: 60rpx;
    position: fixed;
    top: 0rpx;
    right: 10rpx;
}
.item{
    height: 40rpx;
    width: 40rpx;
    margin: 10rpx 10rpx;
}
.title{
    height: 120rpx;
    position: absolute;
    top: 280rpx;
}
.avatar{
    width: 80rpx;
    height: 80rpx;
    border-radius: 40rpx;
    margin-left: 15rpx;
    float: left;
}
.desc{
    float: right;
    font-size: 25rpx;
    color: white;
    margin-left: 10rpx;
}
.desc .item1{
    height: 50%;
    padding: 5rpx;
}
.content{
    padding:12rpx;
    border-bottom:1px solid #E5E7ED;
}
.text{
    font-size: 25rpx;
}
.media{
    width: 100%;
    height: 400rpx;
}
.ctn-title{
    margin-top: 11rpx;
    font-size: 31rpx;
}
.position-img{
    width:20rpx;
    height:20rpx;
}
.poi-info-view{
    width:100%;
    height:30rpx;
    margin-top:13rpx;
    font-size: 22rpx;
}
.poi-info{
    width: 50%;
    overflow: hidden;
    float: left;
}
.comment-info{
    width: 49%;
    overflow: hidden;
    float: left;
    text-align: right;
}

/* foot */
.foot-midle{
    font-size: 40rpx;
    height: 40rpx;
    width: 100rpx;
    text-align: center;
}
foot{
    height: 260rpx;
    width: 100%;
}
.foot-midle {
    height:40rpx;
    width:180rpx;
    text-align:center;
    margin:0 auto;
    line-height:260rpx;
}

.foot-the{
    display: inline-block;
}
.foot-end{
    display: inline-block;
    color: #FFC0CB;
}

