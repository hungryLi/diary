/**index.wxss**/
.item-list{
  /* padding: 10rpx; */
  margin: 10rpx 20rpx;
  position: relative;
}
.cover{
  height: 400rpx;
  width: 100%;
}
.desc{
  width: 100%;
  height: 50rpx;
  font-size: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}
.desc-left{
  float: left;
  width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.desc-right{
  float: right;
}
.line{
  clear: both;
  display: block;
  height: 1rpx;
  background-color: #F0F0F0;
  margin-top: 5rpx;
}
