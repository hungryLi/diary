/* pages/me/aboutMe.wxss */
.header{
    height: 226rpx;
    width: 100%;
    background-color:#EEE9E9; 
}
.header .profile{
    height: 50%;
}
.avartor-me{
    width: 80rpx;
    height: 80rpx;
    border-radius: 40rpx;
    float: left;
    margin: 20rpx 20rpx;
}
.head-userinfo{
    font-size: 27rpx;
    display: inline-block;
    margin-top: 20rpx;
    clear: both;
    color: #B3B3B3;
}

/* tab切换 */
.tabList{
    width: 100%;
    height: 50%;
    display: flex;
    justify-content:space-between;
    align-items:center;
}
.tab{
    display: flex;
    width: 100%;
    justify-content: center;
    border-right:1px solid #eceff4;
}

.tabImg{
    height: 50rpx;
    width: 50rpx;
}
.tabTitle{
    font-size: 22rpx;
    text-align: center;
}